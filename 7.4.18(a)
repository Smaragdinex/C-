#include <stdio.h>

//重複讓使用者輸入數字，直到輸入偶數為止，然後計算 2 到 n 的偶數總和

int main(void)
{
    int n,i,sum;
    
    do{
        scanf("%d",&n);
        sum = 0;
        
        for(i=2; i<=n; i+=2)
        {
            sum+=i;
        }
        
    }while(n%2 ==1);
    
    printf("%d",sum);
    
    return 0;
}
