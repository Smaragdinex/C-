#include <stdio.h>
#include <stdlib.h>

void counter(void);
int fib(int n);
int fibloop(int n);

int main(void)
{
    printf("%d",fibloop(30));
    return 0;
}

void counter(void)
{
    static int n = 0;
    n++;
    printf("counter() call by %d times\n",n);

}

int fib(int n)
{
    counter();
    if(n==1 || n==2)
        return 1;
    else
        return (fib(n-2) + fib(n-1));
}
int fibloop(int n)
{
    if(n==1 || n==2)
    {
        counter();
        return 1;
    }
    
    int a = 1, b = 1, c;
    int i;

    for (i = 1; i <= n; i++)
    {
        counter(); // 每次迴圈也呼叫 counter
        c = a + b;
        a = b;
        b = c;
    }

    return b;
}
