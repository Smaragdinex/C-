#include <stdio.h>
#include <stdlib.h>

int main(void)
{
    int i,j,sale[2][4],sum=0;
    int total1=0,total2=0;
    
    for(i=0; i<2;i++)
        for(j=0;j<4;j++)
        {
            printf("業務員%d的第%d季業績:",i+1,j+1);
            scanf("%d",&sale[i][j]);
        }
        
    printf("***Output***");
    
    for(i=0;i<2;i++)
    {
        printf("\n業務員%d的業績分別為",i+1);
        for(j=0;j<4;j++)
        {
            printf("%d  ",sale[i][j]);
             sum+=sale[i][j];
             
            if (i == 0)
                total1 += sale[i][j];
            else
                total2 += sale[i][j];
            
        }
    }
    
    printf("\n業務員1的總銷售量:%d\n",total1);
    printf("業務員2的總銷售量:%d\n",total2);
    printf("2004的總銷售量:%d\n",sum);
    
    
    return 0;
}

