#include <stdio.h>
#include <stdlib.h>

int main(void)
{
    int arr[] = {9,3,5,7,1,0,8,2,4,6};
    
    int max = arr[0];
    int min = arr[0];
    int maxindex;
    int minindex;
    
    for(int i =0; i< 10;i++)
    {
        if(max < arr[i])
        {
            max = arr[i];
            maxindex = i;
        }
        if(min > arr[i])
        {
            min = arr[i];
            minindex = i;
        }
    }
    
    printf("max arr[%d] = %d\n",maxindex,max);
    printf("min arr[%d] = %d\n",minindex,min);
    
    return 0;
}

